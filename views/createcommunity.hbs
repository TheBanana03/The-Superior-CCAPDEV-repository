<!--HTML-->
{{> navbar user=user }}

<div class="edit-profile-main-div">
    <h1>Create Community</h1>

    <div class="container">

        {{#if user}}       
        <!--Display Cover Photo-->
        {{!-- <div class="profile-container">
        <form action="/community?_method=POST" method="POST" enctype="multipart/form-data"> --}}
            {{!-- <label for="uploadimage" class="profile-picture" id="imagePreview" style="background-image: url('');">
            <input type="file" id="uploadimage" name="profilePicture" accept="image/*">
            <span>Edit Cover Photo</span>
            </label>
            </br> --}}

            <!--Edit Profile Form-->
            <div class="details-container">
                <form action="/community" method="POST">

                    <label for="name">Name:</label>
                    <input type="text" id="name" name="name" placeholder="Enter the community name" value="{{ community.name }}">

                    <label for="tagline">Tagline:</label>
                    <input type="text" id="tagline" name="tagline" placeholder="Enter the Tagline" value="{{ community.tagline }}">

                    <label for="description">Description:</label><br>
                    <textarea id="description" name="description" placeholder="Enter the community description">{{ community.description }}</textarea>

                    <p id="error-message">{{ error }}</p>

                    <!--Buttons-->
                    <div class="buttons-container">
                        <input class="edit-profile-submit" type="submit" value="Save">
                    </div>
                </form>
            </div>
        {{else}}
            <span>You cannot edit this community.</span>
        {{/if}}
    </div>
</div>