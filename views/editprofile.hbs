<!--Bootstrap-->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>

<!--HTML-->
{{> navbar}}

<div class="edit-profile-main-div">
  <h1>Edit Profile</h1>

  <div class="container">

    <!--Display Profile Picture-->
    <div class="profile-container">
      <label for="upload-image" class="profile-picture">
        <input type="file" id="upload-image" accept="image/*">
        Edit Profile Picture
      </label>
    </div>

    <!--Edit Profile Form-->
    <div class="details-container">
      <form action="/editprofile" method="POST">

        <label for="username">Username:</label>
        <input type="text" id="username" name="username" placeholder="Enter your new username" value="{{user.username}}">

        <label for="email">Email:</label>
        <input type="email" id="email" name="email" placeholder="Enter your new email" value="{{user.email}}">

        <label for="password">Password:</label>
        <input type="password" id="password" name="password" placeholder="Enter your new password" value="">

        <label for="idnum">ID Number:</label>
        <input type="number" id="idnum" name="id_num" placeholder="Enter your new ID Number" value="{{user.id_num}}">

        <label for="College">College:</label>
        <select name="college" id="dropdown">
          <option value="">-</option>
          <option value="bagced" {{#when user.course 'eq' 'bagced'}}selected{{/when}}>BAGCED</option>
          <option value="ccs" {{#when user.course 'eq' 'ccs'}}selected{{/when}}>CCS</option>
          <option value="tdsol" {{#when user.course 'eq' 'tdsol'}}selected{{/when}}>TDSOL</option>
          <option value="cla" {{#when user.course 'eq' 'cla'}}selected{{/when}}>CLA</option>
          <option value="cos" {{#when user.course 'eq' 'cos'}}selected{{/when}}>COS</option>
          <option value="gcoe" {{#when user.course 'eq' 'gcoe'}}selected{{/when}}>GCOE</option>
          <option value="cob" {{#when user.course 'eq' 'cob'}}selected{{/when}}>COB</option>
          <option value="soe" {{#when user.course 'eq' 'soe'}}selected{{/when}}>SOE</option>
        </select>

        <label for="Course">Course:</label>
        <input type="text" id="course" name="course" placeholder="Enter your new course" value="{{user.course}}">

        <p id="error-message">{{ error }}</p>

        <!--Buttons-->
        <div class="buttons-container">

          <a href="/editprofile" class="ep-reset-button">Reset</a>

          <input type="submit" value="Save">

        </div>
      </form>
    </div>
  </div>

</div>
