<!--CSS-->
<link rel="stylesheet" href="static/css/styles.css">

<!--JS-->
<script src="static/js/scripts.js"></script>

<!--Bootstrap-->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>

<!--HTML-->
<!--NAVBAR-->

{{>navbar heading="A" showSearchBar="no" user=user}}

<!--HEADER-->
<div class="header-homepage">
    <div class="title-homepage">
        <span>Animo</span>
    </div>
    <div>

        <!--SEARCH BAR-->
        <form class="search-bar" action="/search" method="POST">
            <img class="search-icon" src="/static/assets/icons8-search-100.png" alt="Search Icon">
            <input type="text" name="searchText" placeholder="I am looking for...">
        </form>
    </div>
</div>

<!--COMMUNITIES-->
<div class="communities">
    <div class="subtitle">
        <h5>Let's get you started!</h5>
        <span>Here are some communities we think you might find relevant</span>
    </div>

    <!--COMMUNITY CARDS-->
    <div class="community-card-list row row-cols-3 row-cols-md-3 g-4">
        {{#each communities}}
            <div class="col-md-4">
                <a id="" class="community-card card h-100" href="/community/{{ name }}">
                    {{#if image}}
                        <img src="/static/assets/coverpics/{{ image }}" class="card-img-top" alt="...">
                    {{else}}
                        <img src="/static/assets/coverpics/default.jpg" class="card-img-top" alt="...">
                    {{/if}}
                    <div class="card-body">
                        <h5 class="card-title">{{ name }}</h5>
                        <p class="card-text">{{ tagline }}</p>
                    </div>
                </a>
            </div>
        {{/each}}
    </div>
</div>

<!--FOOTER-->
<footer class="footer">
    <div class="container text-center">
        <div class="animo">
            <button class="btn btn-success" onclick="window.location.href='/about'"> About Us</button>
        </div>
        <br>
    </div>
</footer>