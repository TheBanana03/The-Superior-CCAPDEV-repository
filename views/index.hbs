<!--COMMUNITIES-->
<div class="communities">
    <div class="subtitle">
        <h5>Let's get you started!</h5>
        <span>Here are some communities we think you might find relevant</span>
    </div>

    <!--COMMUNITY CARDS-->
    <div class="community-card-list row row-cols-3 row-cols-md-3 g-4">

        {{#each communities}}
        <div class="col-md-4">
            <a id="" class="community-card card h-100" href="community-page.html">
            <img src="{{image}}" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">{{name}}</h5>
                <p class="card-text">{{description}}</p>
                <div class="community-badge-container mt-auto">
                {{#each tags}}
                    <span class="badge bg-{{color}}">{{name}}</span>
                {{/each}}
                </div>
            </div>
            </a>
        </div>
        {{/each}}

